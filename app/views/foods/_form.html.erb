            <%= f.text_field :price, class: "form-control shadow rounded", placeholder: "Price of the food" %>
          </div>
        </div>
        <br/>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %> <br/>
          <div class="col-10">
            <%= f.text_field :category, class: "form-control shadow rounded", placeholder: "Category of the food" %>
          </div>
        </div>
        <br/>

        <div class ="text-center">
          <div class="form-row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
      <% end %>
      </div>
      <div class="text-center mb-3">

        <%= link_to "Go Back", foods_path, class:"btn btn-warning" %>
      </div>
