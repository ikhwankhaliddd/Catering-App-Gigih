            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of the food" %>
          </div>
        </div>


        <br/>

        <div class="form-group row">
          <%= f.label :price, class: "col-2 col-form-label text-light" %> <br/>
