
<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' , obj: @food %>
      <%= form_with(model: @food, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %> <br/>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of the food" %>
          </div>
        </div>


        <br/>

        <div class="form-group row">
          <%= f.label :price, class: "col-2 col-form-label text-light" %> <br/>
          <div class="col-10">
            <%= f.text_field :price, class: "form-control shadow rounded", placeholder: "Price of the food" %>
          </div>
        </div>
        <br/>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %> <br/>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make your selection from the list below"}, {multiple:true, size: 3,class: "form-select shadow rounded"}) %>
          </div>
        </div>
        <br/>


        <div class ="text-center">
          <div class="form-row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
      <% end %>
      </div>
      <div class="text-center mb-3">

        <%= link_to "Go Back", foods_path, class:"btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
