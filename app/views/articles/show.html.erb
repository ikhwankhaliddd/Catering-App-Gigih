<div class="container" style="margin-top: 25px;">
  <h2 class = "text-center"><%= @article.title %></h2>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center mt-4 shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            by Ikhwan
          </div>
          <div class="card-body">
            <div class="card-text text-left"><%= simple_format(@article.description) %></div>
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
              Edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <br/>
  <div class="form-row text-center mb-5">
    <%= link_to 'Back', articles_path, class: "btn btn-primary" %>
    <%= link_to "Home Page", root_path, class:  "btn btn-warning" %>
  </div>
</div>

